<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!--creating bean for movie (property based injection)-->
    <bean id="movie" class="com.stackroute.domain.Movie" >
        <property name="actor" ref="actor"></property>
    </bean>
    <!--creating bean for actor (property based injection)-->
    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="aishwarya"></constructor-arg>
        <constructor-arg name="gender" value="female"></constructor-arg>
        <constructor-arg name="age" value="22"></constructor-arg>
    </bean>

    <!--bean for beanPostProcessor-->
    <bean id="beanPostProcessorDemoBean" class="com.stackroute.demo.BeanPostProcessorDemoBean"></bean>
</beans>